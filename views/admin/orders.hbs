{{> adminHeader}}
<script src="moment.js"></script>

<h2>Customer Orders</h2>
<div class="text-right mb-3">
  <button class="btn btn-danger btn-sm" id="clearAdminOrdersBtn" onclick="clearAdminOrders()">
    <i class="bi bi-trash3"></i> Clear All Orders
  </button>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Customer</th>
      <th>Products</th>
      <th>Total</th>
      <th>Status</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
      <tr>
        <td>{{this.id}}</td>
        <td>{{this.customer_name}}</td>
        <td>
          {{#if this.products}}
            {{this.products}}
          {{else}}
            <em>None</em>
          {{/if}}
        </td>
        <td>
          {{#if this.amount}}
            BGN {{this.amount}}
          {{else}}
            â‚¦0
          {{/if}}
        </td>
        <td>{{this.status}}</td>
        <td>{{this.created_at}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
function clearAdminOrders() {
  Swal.fire({
    title: 'Are you sure?',
    text: 'This will delete all customer orders permanently!',
    icon: 'warning',
    showCancelButton: true,
    confirmButtonColor: '#d33',
    cancelButtonColor: '#aaa',
    confirmButtonText: 'Yes, delete all',
    cancelButtonText: 'Cancel'
  }).then((result) => {
    if (result.isConfirmed) {
      axios.post('/admin/api/orders/clear')
        .then(res => {
          if (res.data.success) {
            Swal.fire({
              icon: 'success',
              title: 'Cleared!',
              text: 'All orders cleared successfully!',
              confirmButtonColor: '#28a745'
            }).then(() => location.reload());
          } else {
            Swal.fire('Error', 'Failed to clear orders.', 'error');
          }
        })
        .catch(err => {
          console.error('Clear Orders Error:', err);
          Swal.fire('Oops!', 'An error occurred while clearing orders.', 'error');
        });
    }
  });
}
</script>
