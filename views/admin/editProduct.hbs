{{> adminHeader}}

<div class="container">
  <h2>Edit Product</h2>
  <form method="POST" action="/admin/products/edit/{{product.id}}">
    <label>Name</label>
    <input type="text" name="name" value="{{product.name}}" required>

    <label>Price</label>
    <input type="number" name="price" value="{{product.price}}" step="0.01" required>

    <label>Stock</label>
     <input type="number" name="stock" value="{{product.stock}}" placeholder="Stock quantity" required>

    <label>Description</label><br>
    <textarea name="description" required>{{product.description}}</textarea>

    <button type="submit" class="btn btn-success mb-5">Update Product</button>
    <a href="/admin/products" class="btn btn-secondary mb-5">Cancel</a>
  </form>
</div>

{{> adminFooter}}
