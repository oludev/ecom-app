{{> adminHeader}}

  <div class="login-container">
    <div class="login-box">
      <img src="/images/ff-logo.png" alt="Logo" width="200px" height="110px">

      <h2>Admin Login</h2>

      {{#if error}}
        <p class="error-message">{{error}}</p>
      {{/if}}

      <form action="/admin/login" method="POST" autocomplete="off">
        <div class="form-group">
          <label for="usernameOrEmail">Username or Email</label>
          <input type="text" id="usernameOrEmail" name="usernameOrEmail" autocomplete="new-username" required>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" autocomplete="new-password" required>
        </div>

        <button type="submit" class="login-btn">Login</button>
      </form>
    </div>
  </div>
{{> adminFooter}}
